	de 
	bloco*/
	//char
	char letra1 = 'a';
	char letra2 = 'b', letra3 = 'c', letra4 = 'd';
	char somachar = letra1 + letra3;
	//int
	int valorint1 = 1;
	int valorint2 = 2, valorint3 = 3, valorint4 = 4;
	int somaint = valorint1 + valorint4;
	//short int
	short int valorshint1 = 2613;
	short int valorshint2 = 321, valorshint3 = 6588, valorshint4 = 30545;
	//long int
	long int valorlongint1 = -451358435425;
	long int valorlongint2 = 5315315, valorlongint3 = -657853453453, valorlongint4 = 42315313504304;
	//unsigned int
	unsigned int valorunint1 = 32123;
	unsigned int valorunint2 = 452341, valorunint3 = 654156, valorunint4 = 8641813;
	//float
	float valorfloat1 = 1.16514315;
	float valorfloat2 = 153.256, valorfloat3 = 45244.65, valorfloat4 = 5464.12646;
	//double
	double valordoub1 = 354132498;
	double valordoub2 = 5644531453131455341, valordoub3 = 456458486553998, valordoub4 = 8768979795436431;


	printf("Hello world\n");
	printf("char: %c int: %i\n", letra1, valorint1);

	return 0;
}
