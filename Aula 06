/AULA 06------------------------------------------------------------------------
/AULA 06/Exercício01

#include <stdio.h>

int main(int argc, char const *argv[])
{	
	//Variáveis
	float nota1;
	float nota2;
	//Impressão
	printf("---------------------------\n");
	printf("-------- Média Final ------\n");
	printf("---------------------------\n");
	printf("Nota 1: ");
	scanf("%f", &nota1);
	printf("Nota 2: ");
	scanf("%f", &nota2);
	//Cálculo
	float media = (nota1 + nota2) / 2;
	//Impressão final
	printf("---------------------------\n");
	printf("Média: %f\n", media);
	return 0;
}

/AULA 06------------------------------------------------------------------------
/AULA 06/Exercício02

#include <stdio.h>

int main(){
	//cabeçalho
	printf("----------------------------------\n");
	printf("-- Consumo Médio de Combustível --\n");
	printf("----------------------------------\n");

	float km;

	printf("Quantos quilômetros rodados? ");
	scanf("%f", &km);

	float litros;

	printf("Quantos litros de combustível? ");
	scanf("%f", &litros);

	float cons = km / litros;

	printf("Consumo médio de %.2f Km/l.\n", cons);
	printf("----------------------------------\n");
	return 0;
}

/AULA 06------------------------------------------------------------------------
/AULA 06/Exercício03

#include <stdio.h>

int main(){
	printf("--------------------------------\n");
	printf("-- Fahrenheit -> Celcius conv --\n");
	printf("--------------------------------\n");

	float fahr;

	printf("Quantos graus Fahrenheit? ");
	scanf("%f", &fahr);

	float celc = (fahr-32.0)*(5.0/9.0);
	printf("Igual a %.1fºC.\n", celc);

	return 0;
}

